<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence
http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd"
             version="2.1">

    <!-- Une unité de persistance, précisant les informations pour une connection donnée -->
    <persistence-unit name="APHPPU" transaction-type="RESOURCE_LOCAL">
        <!-- L'implémentation JPA utilisée dans notre code -->
        <provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
        <!-- Les classes annotées par @Entity, etc sont toutes considérée comme des classes
        persistantes et gérées par JPA -->
        <exclude-unlisted-classes>false</exclude-unlisted-classes>
        <!-- Les propriétés de connection à notre base de données (source de données == data
        source) -->
        <properties>
            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
            <!-- Nom de la classe à utiliser pour gérer la connection à la base -->
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.ClientDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby://localhost:1527/APHP;create=true"/>
            <property name="javax.persistence.jdbc.user" value="root"/>
            <property name="javax.persistence.jdbc.password" value="root"/>
            <property name="eclipselink.logging.level" value="INFO"/>
        </properties>
    </persistence-unit>
</persistence>